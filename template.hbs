<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{{site.title}}</title>
    <meta name="description" content="{{site.description}}">
    <meta name="keywords" content="{{site.keywords}}">
    <meta name="author" content="{{site.author}}">
    
    <!-- Favicon -->
    <link rel="icon" type="image/png" href="assets/images/favicon.png">
    
    <!-- Stylesheets -->
    {{#each stylesheets}}
    <link rel="stylesheet" href="{{this}}">
    {{/each}}
    
    <!-- Custom CSS -->
    <style>
        /* Add your custom styles here */
        .custom-section {
            padding: 80px 0;
        }
        .section-title {
            font-size: 2.5rem;
            font-weight: 700;
            margin-bottom: 1rem;
        }
        .section-subtitle {
            color: #666;
            font-size: 1.1rem;
            margin-bottom: 2rem;
        }
    </style>
  </head>
<body>
    <!-- Header -->
    <header class="rs-header-area">
        <div class="container">
            <div class="row align-items-center">
                <div class="col-xl-3 col-lg-3">
              <div class="rs-header-logo">
                        <a href="index.html">
                            <img src="{{header.logo.black}}" alt="{{site.title}}">
                        </a>
              </div>
            </div>
                <div class="col-xl-6 col-lg-6">
            <div class="rs-header-menu">
                        <nav class="rs-menu">
                            <ul>
                  {{#each header.navigation}}
                  <li><a href="{{this.link}}">{{this.text}}</a></li>
                  {{/each}}
                </ul>
              </nav>
            </div>
                </div>
                <div class="col-xl-3 col-lg-3">
                    <div class="rs-header-btn">
                        <a class="rs-btn" href="{{header.cta.link}}">{{header.cta.text}}</a>
            </div>
          </div>
        </div>
      </div>
    </header>

    <!-- Main Content -->
    <main>
        <!-- Banner Section -->
        <section id="home" class="rs-banner-area">
        <div class="container">
                <div class="row align-items-center">
                    <div class="col-xl-6 col-lg-6">
                <div class="rs-banner-content">
                            <h1 class="rs-banner-title">{{banner.title}}</h1>
                            <h2 class="rs-banner-subtitle">{{banner.subtitle}}</h2>
                            <p class="rs-banner-description">{{banner.description}}</p>
                            <div class="rs-banner-btn">
                                <a class="rs-btn" href="{{banner.button.link}}">{{banner.button.text}}</a>
                  </div>
                      </div>
                    </div>
                    <div class="col-xl-6 col-lg-6">
                        <div class="rs-banner-thumb">
                            <img src="{{banner.image}}" alt="{{banner.title}}">
                  </div>
                </div>
              </div>
            </div>
        </section>

        <!-- About Section -->
        <section id="about" class="custom-section">
            <div class="container">
                <div class="row">
                    <div class="col-xl-12">
                        <div class="section-title text-center">{{about.title}}</div>
                        <div class="section-subtitle text-center">{{about.subtitle}}</div>
                        <p class="text-center">{{about.description}}</p>
                        <div class="text-center">
                            <a class="rs-btn" href="{{about.button.link}}">{{about.button.text}}</a>
              </div>
            </div>
          </div>
        </div>
      </section>

        <!-- Services Section -->
        <section id="services" class="custom-section bg-light">
        <div class="container">
          <div class="row">
            <div class="col-xl-12">
                        <div class="section-title text-center">{{services.title}}</div>
                        <div class="section-subtitle text-center">{{services.subtitle}}</div>
                  </div>
                </div>
                <div class="row">
            {{#each services.items}}
                    <div class="col-xl-4 col-lg-4 col-md-6">
                        <div class="service-item text-center">
                            <div class="service-icon">
                                <i class="{{this.icon}}"></i>
                  </div>
                            <h4>{{this.title}}</h4>
                    <p>{{this.description}}</p>
              </div>
            </div>
            {{/each}}
          </div>
        </div>
      </section>

        <!-- Portfolio Section -->
        <section id="portfolio" class="custom-section">
        <div class="container">
                <div class="row">
                    <div class="col-xl-12">
                        <div class="section-title text-center">{{portfolio.title}}</div>
                        <div class="section-subtitle text-center">{{portfolio.subtitle}}</div>
                  </div>
                </div>
                <div class="row">
            {{#each portfolio.items}}
            <div class="col-xl-6 col-lg-6 col-md-6">
                        <div class="portfolio-item">
                            <img src="{{this.image}}" alt="{{this.title}}">
                            <div class="portfolio-content">
                                <h4>{{this.title}}</h4>
                                <span>{{this.category}}</span>
                </div>
              </div>
            </div>
            {{/each}}
          </div>
        </div>
      </section>

        <!-- Contact Section -->
        <section id="contact" class="custom-section bg-light">
        <div class="container">
          <div class="row">
            <div class="col-xl-12">
                        <div class="section-title text-center">{{contact.title}}</div>
                        <div class="section-subtitle text-center">{{contact.subtitle}}</div>
                        <p class="text-center">{{contact.description}}</p>
            </div>
          </div>
          <div class="row">
                    {{#each contact.info}}
                    <div class="col-xl-4 col-lg-4 col-md-6">
                        <div class="contact-item text-center">
                            <div class="contact-icon">
                                {{{this.iconSvg}}}
                            </div>
                            <h4>{{this.type}}</h4>
                            <p><a href="{{this.link}}">{{this.value}}</a></p>
                    </div>
                  </div>
                  {{/each}}
          </div>
        </div>
      </section>
    </main>

    <!-- Footer -->
    <footer class="rs-footer-area">
        <div class="container">
            <div class="row">
                <div class="col-xl-4 col-lg-4">
                    <div class="rs-footer-widget">
                        <div class="rs-footer-logo">
                            <img src="{{footer.logo.black}}" alt="{{site.title}}">
                        </div>
                        <p>{{site.description}}</p>
                    </div>
                  </div>
                <div class="col-xl-4 col-lg-4">
                    <div class="rs-footer-widget">
                        <h4>Quick Links</h4>
                  <ul class="rs-footer-list">
                    {{#each footer.navigation}}
                    <li><a href="{{this.link}}">{{this.text}}</a></li>
                    {{/each}}
                  </ul>
                </div>
              </div>
                <div class="col-xl-4 col-lg-4">
                    <div class="rs-footer-widget">
                        <h4>Follow Us</h4>
                        <ul class="rs-footer-social-list">
                            {{#each footer.social}}
                            <li><a href="{{this.link}}"><i class="{{this.icon}}"></i></a></li>
                            {{/each}}
                        </ul>
            </div>
          </div>
        </div>
            <div class="rs-footer-copyright">
        <div class="container">
                    <div class="row">
            <div class="col-xl-12">
              <div class="rs-footer-copyright text-center">
                                <p>{{{footer.copyright.text}}}</p>
                            </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </footer>

    <!-- Scripts -->
    {{#each scripts}}
    <script src="{{this}}"></script>
    {{/each}}
    
    <!-- Custom JavaScript -->
    <script>
        // Add your custom JavaScript here
        document.addEventListener('DOMContentLoaded', function() {
            // Smooth scrolling for anchor links
            document.querySelectorAll('a[href^="#"]').forEach(anchor => {
                anchor.addEventListener('click', function (e) {
                    e.preventDefault();
                    const target = document.querySelector(this.getAttribute('href'));
                    if (target) {
                        target.scrollIntoView({
                            behavior: 'smooth',
                            block: 'start'
                        });
                    }
                });
            });
            
            // Update copyright year
            const yearElement = document.getElementById('year');
            if (yearElement) {
                yearElement.textContent = new Date().getFullYear();
            }
        });
    </script>
  </body>
</html>